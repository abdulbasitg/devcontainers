{
  "name": "CDS8 Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:24",
  "runArgs": ["--name=devcontainer-cds8"],  
  "features": {
    "./cap-tools": {
      "install_cds_dk": true,
      "cds_dk_version": "8",
      "install_mbt": true,
      "install_cf_cli": true,
      "install_sqlite3": true
    }
	},  
  "customizations": {
    "vscode": {
      "extensions": [
        "sapse.vscode-cds",
        "dbaeumer.vscode-eslint",
        "humao.rest-client",
        "qwtel.sqlite-viewer",
        "mechatroner.rainbow-csv",
        "sapse.sap-ux-fiori-tools-extension-pack",
        "github.copilot-chat"
      ],
      "settings": {		    
        "git.autofetch": true
      }      
    }    
  },
  "forwardPorts": [ 4004, 5000 ]
}