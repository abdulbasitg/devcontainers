{
  "name": "CDS8 Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": ["--name=devcontainer-cds8"],
  "customizations": {
    "vscode": {
      "extensions": [
        "sapse.vscode-cds",
        "dbaeumer.vscode-eslint",
        "humao.rest-client",
        "qwtel.sqlite-viewer",
        "mechatroner.rainbow-csv",
        "sapse.sap-ux-fiori-tools-extension-pack",
        "github.copilot-chat"
      ]
    }
  },
  "postCreateCommand": "./.devcontainer/postcreate.sh", 
  "forwardPorts": [ 4004 ],
  "remoteUser": "node"
}